<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Super_Admin.SuperHallAdmin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            >

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/gotocreatehall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Hall"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:textColor="@drawable/item"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@drawable/item"
                />

            <Button
                android:layout_below="@id/gotocreatehall"
                android:id="@+id/gotocreatefloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Floor"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:textColor="@drawable/item"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@drawable/item"
                />

            <Button
                android:layout_below="@id/gotocreatefloor"
                android:id="@+id/gotocreateroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Room"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:textColor="@drawable/item"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@drawable/item"
                />



        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/sbottom_navigation"
            app:itemBackground="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            app:menu="@menu/super_main_menu"
            />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student.StudentEditProfile1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="@null"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_toRightOf="@id/back_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/best"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                    android:id="@+id/editprofileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:cropToPadding="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/colorPrimaryDark"
                    app:c_border="true"
                    app:c_border_color="#47A110"
                    app:c_border_width="4dp"
                    app:c_shadow_radius="@android:integer/config_longAnimTime"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/goeditprofileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_add_a_photo_24"
                    android:tint="@color/best"
                    android:background="@drawable/circle"
                    android:layout_gravity="center"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="-36dp"
                    />



                <RelativeLayout
                    android:id="@+id/first"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Enter District:"
                        android:fontFamily="sans-serif-black"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/best"
                        />




                    <EditText
                        android:id="@+id/edit_district"
                        android:layout_below="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_button"
                        android:ems="10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="District"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_below="@+id/edit_district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Enter Present Address:"
                        android:fontFamily="sans-serif-black"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/best"
                        />

                    <EditText
                        android:id="@+id/edit_paddress"
                        android:layout_below="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_button"
                        android:ems="10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="Present Address"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <TextView
                        android:id="@+id/t3"
                        android:layout_below="@+id/edit_paddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Enter Riligion:(Hindu/Muslim/Others)"
                        android:fontFamily="sans-serif-black"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/best"
                        />

                    <EditText
                        android:id="@+id/edit_riligion"
                        android:layout_below="@+id/t3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_button"
                        android:ems="10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="Religion"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <TextView
                        android:id="@+id/t4"
                        android:layout_below="@+id/edit_riligion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Enter Year:(1st/2nd/3rd/4th)"
                        android:fontFamily="sans-serif-black"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/best"
                        />

                    <EditText
                        android:id="@+id/edit_year"
                        android:layout_below="@+id/t4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_button"
                        android:ems="10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="Year"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <TextView
                        android:id="@+id/t5"
                        android:layout_below="@+id/edit_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Enter Phone no:"
                        android:fontFamily="sans-serif-black"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/best"
                        />


                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_below="@+id/t5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_button"
                        android:ems="10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:hint="Phone No"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />



                </RelativeLayout>

                <Button
                    android:id="@+id/savestinfo"
                    android:layout_below="@id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:textColor="@drawable/item"
                    android:textStyle="bold"
                    android:background="@drawable/item"
                    />



            </LinearLayout>

        </ScrollView>



    </LinearLayout>





</LinearLayout>
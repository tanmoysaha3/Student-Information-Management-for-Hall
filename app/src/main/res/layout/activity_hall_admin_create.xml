<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    android:gravity="center"
    tools:context=".SuperAdmin.HallAdminCreate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        >


        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:background="@drawable/a"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/logo"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/hall"/>
            </LinearLayout>


            <TextView
                android:id="@+id/ttt1"
                android:layout_below="@id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hall Admin Registration"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                />

            <ImageButton
                android:id="@+id/back_halladmin"
                android:layout_below="@id/ttt1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:background="@drawable/b"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>





        <RelativeLayout
            android:layout_below="@+id/R1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/hdName"
                        android:layout_below="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:ems="10"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawableTint="@color/best"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="25dp"
                        android:hint="Full Name"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <EditText
                        android:id="@+id/hdEmail"
                        android:layout_below="@+id/hdName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:ems="10"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:drawableTint="@color/best"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="25dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <EditText
                        android:id="@+id/hdPassword"
                        android:layout_below="@+id/hdEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:ems="10"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_lock_black_24dp"
                        android:drawableTint="@color/best"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />


                    <Button
                        android:id="@+id/hdcreateButton"
                        android:layout_below="@id/hdPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Hall Admin"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/best"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:background="@drawable/border1"
                        />

                    <Spinner
                        android:id="@+id/hphoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/invisible"
                        android:visibility="gone"
                        />

                    <Spinner
                        android:id="@+id/hassignedhall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/invisible"
                        android:visibility="gone"
                        />

                    <Spinner
                        android:id="@+id/hdepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/invisible"
                        android:visibility="gone"
                        />
                    <Spinner
                        android:id="@+id/hdesignation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/invisible"
                        android:visibility="gone"
                        />

                </RelativeLayout>


            </ScrollView>


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
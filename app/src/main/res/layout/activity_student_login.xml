<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    tools:context=".Student.StudentLogin">

    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_arrow_back_black_24dp"/>

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/title"
            android:layout_below="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textColor="@color/best"
            android:text="Jashore University of Science and Technology"
            android:textAlignment="center"
            />

        <RelativeLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Login"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        android:padding="26dp"
                        android:textColor="@color/best"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"/>

                    <EditText
                        android:id="@+id/cEmail"
                        android:layout_below="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_button"
                        android:ems="10"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="25dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <EditText
                        android:id="@+id/cPassword"
                        android:layout_below="@+id/cEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_button"
                        android:ems="10"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/best"
                        android:textColorHint="@color/best"
                        />

                    <TextView
                        android:layout_below="@id/cPassword"
                        android:id="@+id/resetPasswordLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="35dp"
                        android:text="Forget Password?"
                        android:textColor="@color/best"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-black"
                        />

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_below="@id/resetPasswordLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@drawable/item"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:background="@drawable/item"
                        />

                    <TextView
                        android:layout_below="@+id/loginButton"
                        android:id="@+id/registerPageLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New? Create Account Here"
                        android:layout_marginTop="25dp"
                        android:textAlignment="center"
                        android:textColor="@color/best"
                        android:textSize="19sp"
                        android:fontFamily="sans-serif-black"
                        />
                </RelativeLayout>


            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>